@using Resources
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Messages.Web_Employee_Title</h2>

<form id="contenedorFiltros">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Messages.Web_Employee_LblIdEmployee</label>
        <div class="col-sm-8">
            <input type="number" id="inputIdEmployee" name="inputIdEmployee" class="form-control" />
        </div>
        <div class="col-sm-2">
            <button type="button" id="btnGetInfoEmployee" 
                    class="btn btn-primary" 
                    title=@Messages.Web_Employee_btnGetInfoEmployee_ToolTip
                    data-datos="@Url.Action("GetInfoEmployees", "Employee")">
                <i class="fa fa-search"></i>
                @Messages.Web_Employee_btnGetInfoEmployee
            </button>
        </div>
    </div>
</form>

<table id="tableListEmployees" class="table table-striped table-bordered">
</table>

@section scripts {
    @Scripts.Render("~/bundles/employee")
}
